#tag WindowCode
	#tag Event
		Sub Open()
		  
		  
		  
		  RubberView1.Init(Self) 
		End Sub
	#tag EndEvent

	#tag Event
		Sub Paint(g As Graphics, areas() As REALbasic.Rect)
		  Dim g1 as Graphics = g
		  
		  me.BackColor = get_color("Gray",1)
		  
		  me.DrawBackground(g1)
		  me.DrawBorder(g1)
		End Sub
	#tag EndEvent

	#tag Event
		Sub Resized()
		  
		  
		  
		  
		  
		  RubberView1.StretchWindowBackdrop = True
		  RubberView1.SizAll(self, false, False)
		  
		End Sub
	#tag EndEvent

	#tag Event
		Sub Resizing()
		  
		  
		  
		  RubberView1.StretchWindowBackdrop = True
		  
		  RubberView1.SizAll(Self,False, False)
		  
		End Sub
	#tag EndEvent


	#tag Method, Flags = &h0
		Sub DrawBackground(GraphicsObject as Graphics)
		  Dim g1 as Graphics = GraphicsObject
		  
		  
		  
		  g1.ForeColor = me.BackColor
		  g1.FillRoundRect(0,0,me.Width,me.Height - 1,4,4)
		  
		End Sub
	#tag EndMethod

	#tag Method, Flags = &h0
		Sub DrawBorder(GraphicsObject as Graphics)
		  Dim g1 as Graphics = GraphicsObject
		  
		  
		  me.BorderColor = get_color("Gray",3)
		  g1.ForeColor = me.BorderColor
		  g1.DrawRoundRect(0,0,me.Width,me.Height - 1,4,4)
		End Sub
	#tag EndMethod

	#tag Method, Flags = &h0
		Sub LoadFromDB()
		  
		  
		  
		  TheTextField.LoadFromDB
		End Sub
	#tag EndMethod

	#tag Method, Flags = &h0
		Sub RaiseSave()
		  
		  
		  
		  
		  TheTextField.RaiseSave
		End Sub
	#tag EndMethod


	#tag Hook, Flags = &h0
		Event Initialize()
	#tag EndHook

	#tag Hook, Flags = &h0
		Event LoadFromDB() As String
	#tag EndHook

	#tag Hook, Flags = &h0
		Event Saved()
	#tag EndHook

	#tag Hook, Flags = &h0
		Event SaveEvent()
	#tag EndHook


	#tag Property, Flags = &h0
		BorderColor As Color
	#tag EndProperty


#tag EndWindowCode

#tag Events TheTextField
	#tag Event
		Sub Initialize()
		  
		  
		  me.Bckdrp = CanvasBckDrp1
		  
		  RaiseEvent Initialize
		End Sub
	#tag EndEvent
	#tag Event
		Function LoadFromDB() As String
		  
		  
		  
		  Return RaiseEvent LoadFromDB
		End Function
	#tag EndEvent
	#tag Event
		Sub Saved()
		  
		  
		  
		  RaiseEvent Saved
		End Sub
	#tag EndEvent
	#tag Event
		Sub SaveEvent()
		  
		  
		  
		  RaiseEvent SaveEvent
		End Sub
	#tag EndEvent
#tag EndEvents
