#tag Window
Begin ContainerControl ccPage
   AcceptFocus     =   False
   AcceptTabs      =   True
   AutoDeactivate  =   True
   BackColor       =   &cFFFFFF00
   Backdrop        =   0
   Compatibility   =   ""
   Enabled         =   True
   EraseBackground =   True
   HasBackColor    =   False
   Height          =   25
   HelpTag         =   ""
   InitialParent   =   ""
   Left            =   0
   LockBottom      =   False
   LockLeft        =   False
   LockRight       =   False
   LockTop         =   False
   TabIndex        =   0
   TabPanelIndex   =   0
   TabStop         =   True
   Top             =   0
   Transparent     =   True
   UseFocusRing    =   False
   Visible         =   True
   Width           =   25
   Begin Label lbl
      AutoDeactivate  =   True
      Bold            =   False
      DataField       =   ""
      DataSource      =   ""
      Enabled         =   True
      Height          =   20
      HelpTag         =   ""
      Index           =   -2147483648
      InitialParent   =   ""
      Italic          =   False
      Left            =   0
      LockBottom      =   False
      LockedInPosition=   False
      LockLeft        =   True
      LockRight       =   False
      LockTop         =   True
      Multiline       =   False
      Scope           =   0
      Selectable      =   False
      TabIndex        =   0
      TabPanelIndex   =   0
      TabStop         =   True
      Text            =   "0"
      TextAlign       =   1
      TextColor       =   &c00000000
      TextFont        =   "System"
      TextSize        =   0.0
      TextUnit        =   0
      Top             =   0
      Transparent     =   False
      Underline       =   True
      Visible         =   True
      Width           =   25
   End
End
#tag EndWindow

#tag WindowCode
	#tag Event
		Function MouseDown(X As Integer, Y As Integer) As Boolean
		  if mbCurrent = false and mbEnabled then
		    mParent.NewPage lbl.text
		  end
		  
		  return true
		End Function
	#tag EndEvent


	#tag Method, Flags = &h0
		Sub Constructor(Parent as ccPageList, sLabel as String, bCurrentPage as Boolean, bEnabled as Boolean)
		  mParent = Parent
		  
		  lbl.text = sLabel
		  
		  mbCurrent = bCurrentPage
		  
		  if mbCurrent then
		    lbl.Bold = true
		    lbl.Underline = false
		    lbl.TextColor = &c00000000
		  else
		    lbl.Bold = false
		    lbl.Underline = True
		    lbl.TextColor = &c0000FF00
		  end
		  
		  mbEnabled = bEnabled
		  lbl.Enabled = mbEnabled
		End Sub
	#tag EndMethod


	#tag Property, Flags = &h0
		mbCurrent As Boolean
	#tag EndProperty

	#tag Property, Flags = &h0
		mbEnabled As Boolean
	#tag EndProperty

	#tag Property, Flags = &h0
		mParent As ccPageList
	#tag EndProperty


#tag EndWindowCode

#tag Events lbl
	#tag Event
		Sub MouseEnter()
		  if mbCurrent OR mbEnabled = false then return
		  
		  me.MouseCursor = system.Cursors.FingerPointer
		End Sub
	#tag EndEvent
	#tag Event
		Sub MouseExit()
		  me.MouseCursor = nil
		End Sub
	#tag EndEvent
#tag EndEvents
